
   pipeline {


        environment {
        registry = "johnstx/tooling" 
        registryCredential = 'dockerHub' 
        dockerImage = ''


    agent any

  stages {
    stage('Build') {
      steps {
        script {
          sh 'echo "Building Stage"'
        }
      }
    }

    stage('Test') {
      steps {
        script {
          sh 'echo "Testing Stage"'
        }
      }
    }
    }
}


